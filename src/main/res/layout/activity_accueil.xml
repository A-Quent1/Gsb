<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Accueil">

    <TextView
        android:id="@+id/tv_acceuil_titre"
        android:layout_width="282dp"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:text="Application de gestion des échantillons de compléments alimentaires"
        app:layout_constraintBottom_toTopOf="@+id/b_accueil_ajout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_accueil_ajout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ajout un nouvel échantillon"
        app:layout_constraintBottom_toTopOf="@+id/b_accueil_liste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_acceuil_titre" />

    <Button
        android:id="@+id/b_accueil_liste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Liste des échatillons"
        app:layout_constraintBottom_toTopOf="@+id/b_accueil_maj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_accueil_ajout" />

    <Button
        android:id="@+id/b_accueil_maj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Maj d'un échantillon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_accueil_liste" />

</androidx.constraintlayout.widget.ConstraintLayout>